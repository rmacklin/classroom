<%= render 'organizations/organization_banner' %>

<div class="site-content-cap">
  <h2 class="site-content-heading">
    Edit Task #<%= @task.position %> for <%= link_to @assignment.title, [:edit, @assignment.organization, @assignment] %>
  </h2>
</div>

<div class="site-content-body">
  <%= form_for [@assignment.organization, @assignment, @task] do |f| %>
    <div class="columns">
      <div class="two-thirds column">
        <%= render partial: 'form_options', locals: { f: f } %>
      </div>

      <div class="one-third column dangerzone-container">
        <p class="text-emphasized">Delete this task</p>
        <p class="text-muted">Once you delete this task, there is no going back. Please be certain.</p>
        <a data-remodal-target="delete-task" class="btn btn-danger btn-block">Delete this task</a>
      </div>
    </div>
    <div class="form-actions">
      <%= f.submit 'Save changes', class: 'btn btn-green js-navigation' %>
      <%= link_to 'Cancel', [:edit, @assignment.organization, @assignment], class: 'btn', role: 'button' %>
    </div>
  <% end %>
</div>

<%= render partial: 'delete_task_modal' %>
